# AEGIS Environment Configuration Template
# Copy to .env and fill in actual values
# DO NOT commit .env to Git!

###########################################
# PostgreSQL Configuration
###########################################
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://aegis_user:${POSTGRES_PASSWORD}@postgres:5432/aegis

###########################################
# Redis Configuration
###########################################
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

###########################################
# Django Configuration
###########################################
DJANGO_SECRET_KEY=your_django_secret_key_here_minimum_50_characters_long
DJANGO_SETTINGS_MODULE=aegis_project.settings.development
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,nginx

###########################################
# Flask Configuration
###########################################
FLASK_APP=dashboard.app
FLASK_ENV=development
ALERT_DB_PATH=/app/data/alerts.db

###########################################
# FHIR Configuration
###########################################
FHIR_BASE_URL=http://hapi-fhir:8080/fhir

###########################################
# Dashboard Configuration
###########################################
DASHBOARD_BASE_URL=http://localhost:8080
DASHBOARD_API_KEY=your_api_key_here

###########################################
# Flower (Celery Monitoring)
###########################################
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password_here

###########################################
# Cincinnati Children's SSO (Production)
###########################################
LDAP_SERVER=ldap://ldap.cchmc.org
LDAP_BIND_DN=CN=aegis_service,OU=ServiceAccounts,DC=cchmc,DC=org
LDAP_BIND_PASSWORD=your_ldap_password_here
LDAP_USER_BASE=OU=Users,DC=cchmc,DC=org

SAML_SP_ENTITY_ID=https://aegis-asp.com/saml/metadata/
SAML_IDP_METADATA_URL=https://sso.cchmc.org/saml/metadata

###########################################
# Monitoring & Logging (Production)
###########################################
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# New Relic APM
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
NEW_RELIC_APP_NAME=AEGIS

###########################################
# Email Notifications
###########################################
SMTP_SERVER=smtp.cchmc.org
SMTP_PORT=587
SMTP_USERNAME=aegis_app
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=aegis@cchmc.org

###########################################
# Microsoft Teams Webhooks
###########################################
TEAMS_WEBHOOK_URL=https://your_teams_webhook_url_here

###########################################
# Docker Configuration
###########################################
DOCKER_REGISTRY=ghcr.io
VERSION=latest
